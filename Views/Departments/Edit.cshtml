@model sales_web_mvc.Models.Department

@{
    ViewData["Title"] = "Edit";
}

<br />
<h3>Editor de Departamento</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nome</label>
                <input asp-for="Name" class="form-control" placeholder="Nome Departamento">
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success">
                <a class="btn btn-primary" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}